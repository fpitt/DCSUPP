div class="col-xs-12"
    h3 id="project-info-title" class="text-blue" 
        b Project Information 
    button class="button-margin-10" ng-if="user.administrator || user.professor" restrict="" class="btn btn-default" ui-sref="your_projects.update_project({id: project.id})"
        span class="gylphicon glyphicon-pencil" aria-hidden="true"
        span  Edit
    span ng-show="project.completed == false"
        button ng-if="user.administrator || user.professor" restrict="" class="btn btn-default" ng-click="setCompleted()"
            span class="glyphicon glyphicon-ok" aria-hidden="true"
            span  Set As Completed
    br
    br
    table class="table table-hover"
        thead
            tr
                th #
                th Information
        tr
            td
                b
                    | Title
            td
                span
                    | {{ project.title }}
        tr
            td
                b
                    | Deadline
            td
                span
                    | {{ project.deadline_date | date: 'dd-MM-yyyy' }}
        tr
            td
                span
                    b 
                        | Description
            td
                span class="preserve_newline"
                    | {{ project.text }}
        tr
            td
                b
                    | Additional Requirements
            td
                span class="preserve_newline"
                    | {{ project.additional_requirement }}


div class="col-xs-12" ng-if="requirements.length != 0"
    b class="text-blue" Project Requirements

    table class="table table-condensed"
        thead
            tr
                th Project Requirements
        tbody
            tr ng-repeat="requirement in requirements"
                td
                    span 
                        | {{ requirement.subcategory_name }}
                td
                    span
                        | {{ requirement.comparison }}
                td
                    span ng-if="!(requirement.attribute_type == 'Date')"
                        | {{ requirement.value }}
                    span ng-if="requirement.attribute_type == 'Date'"
                        | {{ requirement.value | date:'yyyy-MM-dd'}}

div class="col-xs-12"
    div class="text-center"
        div ng-show="acceptingApplications"
            button ng-if="!(user.administrator || user.professor)" class="btn btn-default" ui-sref="current_project.apply_project({id: project.id})" Apply Now
        div ng-show="!acceptingApplications"
            b class="text-blue"
                span The application period is over.